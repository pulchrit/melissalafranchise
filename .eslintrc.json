{
  "plugins":  ["prettier"],
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/recommended",
    "next"
  ],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }],
    "sort-imports": 
    [
      "error", 
      { 
        "ignoreCase": true, 
        "ignoreDeclarationSort": true 
      }
    ],
    "import/order": "error"
  }
}
